---
import type { ItemStudyProps } from "./ItemStudy.astro";
import ItemStudy from "./ItemStudy.astro";

interface StudiesProps {
  title: string;
  studies: ItemStudyProps[];
  itemInformation: {
    labelRol: string;
    labelInstitution: string;
    labelGradeDate: string;
    labelAchievements: string;
  };
}

const { title, studies = [], itemInformation } = Astro.props as StudiesProps;
---

<section id="studies">
  <h2
    class="flex gap-2 text-3xl items-center pt-32 font-bold underline underline-offset-8 decoration-blue-500 decoration-dashed"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-graduation-cap"
      ><path
        d="M21.42 10.922a1 1 0 0 0-.019-1.838L12.83 5.18a2 2 0 0 0-1.66 0L2.6 9.08a1 1 0 0 0 0 1.832l8.57 3.908a2 2 0 0 0 1.66 0z"
      ></path><path d="M22 10v6"></path><path d="M6 12.5V16a6 3 0 0 0 12 0v-3.5"
      ></path></svg
    >
    {title}
  </h2>

  <ul class="mt-5 ml-5 flex flex-col gap-4">
    {studies.map((item) => <ItemStudy {...itemInformation} {...item} />)}
  </ul>
</section>
