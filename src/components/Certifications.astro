---
import type { ItemCertificationProps } from "./ItemCertification.astro";
import ItemCertification from "./ItemCertification.astro";

interface CertificationsProps {
  title: string;
  certifications: ItemCertificationProps[];
  itemInformation: {
    labelInstitution: string;
    labelGradeDate: string;
  };
}

const {
  title,
  certifications = [],
  itemInformation,
} = Astro.props as CertificationsProps;


---

<section id="certifications">
  <h2
    class="flex gap-2 text-3xl items-center pt-32 font-bold underline underline-offset-8 decoration-blue-500 decoration-dashed"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="lucide lucide-graduation-cap"
      ><rect width="7" height="7" x="14" y="3" rx="1"></rect><path
        d="M10 21V8a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-5a1 1 0 0 0-1-1H3"
      ></path></svg
    >
    {title}
  </h2>

  <ul class="mt-10 flex flex-wrap gap-4 w-full justify-evenly">
    {
      certifications.map((item) => (
        <ItemCertification {...itemInformation} {...item} />
      ))
    }
  </ul>
</section>
