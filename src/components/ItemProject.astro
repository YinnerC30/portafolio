---
import Accordion from './Accordion';
import Badge from './Badge.astro';
import ButtonLink from './ButtonLink.astro';
import type { ItemTechnology, ProjectInformation } from './Projects.astro';

const {
  projectName = '',
  descriptionProject = '',
  stackTechnologies = [],
  linkRepository = '',
  linkPreview = '',
  features = [],
} = Astro.props as ProjectInformation;
---

<li class="list-disc">
  <h3 class="font-bold text-xl text-yellow-500">
    {projectName}
  </h3>

  <h3 class="font-bold mt-4">Tecnologías utilizadas:</h3>
  <div class="flex gap-2 flex-wrap">
    {
      stackTechnologies.map((technology: ItemTechnology) => (
        <Badge className={technology.backgroundColor} name={technology.name} />
      ))
    }
  </div>

  <div class="flex gap-4 flex-wrap mt-4">
    <ButtonLink name="Código" hrefLink={linkRepository}>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-github"
        ><path
          d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
        ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
      >
    </ButtonLink>
    <ButtonLink name="Demo" hrefLink={linkPreview}>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-link"
        ><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
        ></path><path
          d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
        ></path></svg
      >
    </ButtonLink>
  </div>

  <h3 class="my-4">
    <span class="font-bold">Descripción: </span>
    {descriptionProject}
  </h3>

  <Accordion client:load title="Mostrar funcionalidades">
    <h3 class="font-bold">Funcionalidades del proyecto:</h3>
    <ul class="list-disc">
      {features.map((feat) => <li class="ml-10">{feat}</li>)}
    </ul>
  </Accordion>
</li>
