---
import "../styles/global.css";
import "@fontsource/onest";

interface LayoutProps {
  language: string;
  descriptionPage: string;
  titlePage: string;
}

const {
  language = "es",
  descriptionPage,
  titlePage,
} = Astro.props as LayoutProps;
---

<!doctype html>
<html lang={language}>
  <head>
    <meta charset="UTF-8" />

    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="/code-xml.svg" />
    <title>{titlePage}</title>
    <meta name="description" content={descriptionPage} />

    <meta
      name="keywords"
      content="Yinner, Chilito, Developer, FullStack, Web, Portafolio, Software, Frontend, Backend"
    />
    <meta name="robots" content="index, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:image" content="/foto-perfil.webp" />
    <meta name="twitter:image" content="/foto-perfil.webp" />
  </head>
  <body
    class="lg:w-3/5 h-fit mx-auto bg-gradient-to-b from-slate-900 to-slate-950 text-slate-200 flex justify-center flex-col tracking-wider items-center"
  >
    <slot />
  </body>
</html>
